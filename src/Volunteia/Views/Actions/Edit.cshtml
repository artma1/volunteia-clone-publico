@model Volunteia.Models.Action

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Action</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ActionId" />
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Foto" class="control-label"></label>
                <input asp-for="Foto" class="form-control" />
                <span asp-validation-for="Foto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Patrocinador" /> @Html.DisplayNameFor(model => model.Patrocinador)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ActionDate" class="control-label"></label>
                <input asp-for="ActionDate" class="form-control" />
                <span asp-validation-for="ActionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActionBio" class="control-label"></label>
                <input asp-for="ActionBio" class="form-control" />
                <span asp-validation-for="ActionBio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ODS" class="control-label"></label>
                <select asp-for="ODS" class="form-control"></select>
                <span asp-validation-for="ODS" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VolunteersTotal" class="control-label"></label>
                <input asp-for="VolunteersTotal" class="form-control" />
                <span asp-validation-for="VolunteersTotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Alcance" class="control-label"></label>
                <input asp-for="Alcance" class="form-control" />
                <span asp-validation-for="Alcance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
